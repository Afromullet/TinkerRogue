{
  "permissions": {
    "allow": [
      "Bash(for file in explorationmode.go formationeditormode.go infomode.go inventorymode.go squadmanagementmode.go squadbuilder.go squaddeploymentmode.go)",
      "Bash(do)",
      "Bash(perl -i -pe:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(go vet:*)",
      "Bash(find:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/log-agent-usage.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
